.wrapper {
  padding: 10px 12px 0;
}


.banner {
  width: 100%;
  height: 140px;
  background: url(../images/commercial_college_banner.png) no-repeat;
  background-size: 100%;
  border-radius: 10px;

  img {
    width: 100%;
    height: 100%;
  }
}


.list-classroom {
  display: flex;
  flex-wrap: wrap;
  margin-top: 15px;

  a {
    display: flex;
    flex-direction: column;
    padding: 15px 10px;
    box-sizing: border-box;
    width: 31.33%;
    margin-right: 3%;
    margin-bottom: 10px;
    box-sizing: border-box;
    border-radius: 5px;
    color: #fff;

    span:nth-child(1) {
      margin-bottom: 8px;
      font-size: 16px;
    }

    span:nth-child(2) {
      position: relative;
      max-width: 3em;
      padding: 1px 0;
      border-radius: 10px;
      padding-left: 4px;
      text-align: left;
      background: #fff141;
      color: #d78b22;
      font-size: 10px;

      &:after {
        content: "";
        position: absolute;
        width: 4px;
        height: 4px;
        border-right-width: 1px;
        border-right-style: solid;
        border-right-color: #d78b22;
        border-bottom-width: 1px;
        border-bottom-style: solid;
        border-bottom-color: #d78b22;
        right: 5px;
        top: 50%;
        margin-top: -2.5px;
        transform: rotate(-45deg);
      }
    }
  }

  a:nth-child(3) {
    margin-right: 0;
  }

  a:nth-child(6) {
    margin-right: 0;
  }

  .list-new {
    background: #ff4f44;  
  }

  .list-smallWhite-classroom {
    background: #4f5eda;
  }

  .list-intermediate-classroom {
    background: #2cadfa;
  }

  .list-master-share {
    background: #ff6e60;
  }

  .list-advanced-classroom {
    background: #fa9d14;
  }

  .list-expect {
    display: flex;
    justify-content: center;
    align-items: center;
    background: #eee;
    color: #9e9e9eb5;

    span:nth-child(1) {
      margin-bottom: 0;
      font-size: 16px;
    }
  }
}

.list-recommend {
  margin-top: 15px;

  h3 {
    font-size: 16px;
  }
}


// 共享样式 ---> 文章列表

.article-list {
  padding: 0 12px;
}

.list {
  margin-top: 15px;

  .item {
    display: flex;
    justify-content: space-between;
    margin-bottom: .4rem;

    .item-img {
      min-width: 2.46rem;
      height: 2rem;
      margin-right: 10px;
      border-radius: 10px;
      box-sizing: border-box;
      background: #03a9f4;

      img {
        width: 100%;
      }
    }

    .item-content {
      overflow: hidden;

      .item-title {
        font-size: 15px;
        font-weight: 650;
        margin-bottom: .32rem;
      }

      .item-digest {
        font-size: 13px;
        color: #333;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        margin-bottom: .2rem;
      }

      .item-browse {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #9e9e9ec9;
        font-size: 12px;

        .watching-number {
          position: relative;
          padding-right: .45rem;

          &:after {
            content: "";
            position: absolute;
            width: .4rem;
            height: .3rem;
            top: 50%;
            right: 0;
            margin-top: -.15rem;
            background: url(../images/watch.svg) no-repeat;
            background-size: 100%;
            background-position: center;
          }
        }
      }
    }
  }
}
